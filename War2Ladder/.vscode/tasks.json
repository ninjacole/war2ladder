{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Backend Server",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "run"
            ],
            "isBackground": true,
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build"
        },
        {
            "label": "Build Project",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build",
                "--configuration",
                "Debug",
                "--verbosity",
                "minimal"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Start Frontend Dev Server",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "dev"
            ],
            "options": {
                "cwd": "${workspaceFolder}/Areas/Frontend"
            },
            "isBackground": true,
            "problemMatcher": {
                "owner": "typescript",
                "pattern": {
                    "regexp": "^([^\\s].*)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
                    "file": 1,
                    "location": 2,
                    "severity": 3,
                    "code": 4,
                    "message": 5
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "group": "build"
        }
    ]
}